<%# Top Pick Section and Transactions %>
<article class = "md:flex justify-center md:space-x-10">
  <div class="flex flex-col items-center space-y-5">
    <div class="top-picks font-bold text-2xl sm:text-3xl md:text-4xl">
      Top Picks
    </div>
    <div class="flex space-x-4">
      <div class="card"><%= render 'partials/card' %></div>
      <div class="card hidden md:block"><%= render 'partials/card' %></div>
      <div class="card hidden xl:block"><%= render 'partials/card' %></div>
    </div>
  </div>
  <div class="transactions mt-[3.5rem] space-y-3">
    <div class="text-center font-bold text-xl sm:text-3xl md:text-xl">
      Transactions
    </div>
    <div class="space-y-2.5 flex flex-col bg-gray-500 items-center">
      <div class="trx">
        <%= render 'partials/trx2' %>
      </div>
      <div class="trx">
        <%= render 'partials/trx2' %>
      </div>
      <div class="trx hidden md:block">
        <%= render 'partials/trx2' %>
      </div>
      <div class="trx hidden xl:block">
        <%= render 'partials/trx2' %>
      </div>
    </div>
  </div>
</article>
<%# Dicover Items %>
<article class = "mt-10 flex flex-col items-center space-y-5">
  <div class="flex flex-col items-center">
    <div class="text-xs md:text-base xl:text-xl font-bold text-[#DF3C6C]">
      DISCOVER</div>
    <div class="font-bold text-2xl sm:text-3xl md:text-4xl">
      Discover Items</div>
    <%= form_with url: all_path, method: :get, data: {turbo_frame: "all_nfts",
     turbo_action: "advance", controller: "form", action: "input->form#submit"} do %>
      <%= text_field_tag "search", nil, placeholder: "Search", class: "mt-5 w-48 outline outline-1 outline-grey2 p-1.5 px-4 text-sm font-light text-grey2 rounded-3xl bg-[#100E10]"%>
    <% end %>
  </div>
  <%# Search Bar %>
  <div class="all-nfts grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    <% turbo_frame_tag "all_nfts" do %>
      <div class="card"><%= render 'partials/card' %></div>
      <div class="card"><%= render 'partials/card' %></div>
      <div class="card"><%= render 'partials/card' %></div>
      <div class="card"><%= render 'partials/card' %></div>
      <div class="card"><%= render 'partials/card' %></div>
      <div class="card"><%= render 'partials/card' %></div>
      <div class="card"><%= render 'partials/card' %></div>
    <% end %>
  </div>
</article>
