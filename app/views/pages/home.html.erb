  <h2 class = "text text-4xl font-bold mb-7 text-center">
    Hot Items
  </h2>
  <div class="flex flex-row justify-evenly mb-5">
    <%= render 'partials/card' %>
    <%= render 'partials/card' %>
    <%= render 'partials/card' %>
  </div>
  <div class="flex justify-center">
    <div class="btn text-center text-2xl">Explore</div>
  </div>
</section>
