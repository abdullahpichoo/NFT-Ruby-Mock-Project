<div id="<%= dom_id nft %>">
  <div class="card p-4 bg-[#1e1e1e] w-60 h-80 rounded-3xl sm:w-72">
    <div class="card-image w-52 pb-[95%] sm:w-64 sm:pb-[78%] relative">
      <%=image_tag nft.image, class: "absolute top-0 h-48 w-[100%] object-cover rounded-2xl hover:-top-1 duration-150 transition-all" %>
    </div>
    <div class="card-details mx-0.5">
      <div class="name-and-price flex justify-between items-center">
        <div class="flex flex-col max-w-[70%]">
          <div class="text-lg sm:text-xl font-bold truncate overflow-hidden"><%= nft.name %></div>
          <div class="text-xs sm:text-sm text-grey2 font-medium">
            <% temp_wallet=Wallet.find(nft.wallet_id) %>
            <% temp_user=User.find(temp_wallet.id) %>
            <% owner_wallet=temp_user.wallet %>
            <%= link_to nft.wallet.user.username, user_profile_path(temp_user) %>
          </div>
        </div>
        <div class="flex items-center">
          <%= image_tag "eth.png", class: "h-max w-6" %>
          <div class="price text-xl font-bold hover:text-green-500 cursor-pointer"><%= nft.price %></div>
        </div>
      </div>
      <div class="flex justify-between items-center mt-2">
        <%= link_to "View", wallet_nft_path(nft.wallet_id,nft),class:"btn-outline text-sm font-bold" %>
        <div class="hearts text-xs font-semibold">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="stroke-stdPink w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
            </svg>
            <div class="ml-1 heart-count">
              <%= Orderable.where(nft_id: nft.id).count %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
