<%# Desktop Navbar %>
<nav class = "hidden md:flex relative mb-10 justify-between z-20 ">
  <%# Logo and Search %>
  <ul class = "flex items-center space-x-9">
    <li class = "text-2xl font-bold" >
      <%= link_to "FakeFT", root_path %>
    </li>
    <%= form_with url: all_path, method: :get, data: {turbo_frame: "all_nfts"} do %>
      <%= text_field_tag "search", nil, placeholder: "Search", class: "w-48 outline outline-1 outline-grey2 p-1.5 px-4 text-sm font-light text-grey2 rounded-3xl bg-transparent"%>
    <% end %>
  </ul>
  <%# NavLinks and Icons %>
  <%# Explore %>
  <ul class = "flex items-center space-x-5">
    <div class="flex items-center space-x-1">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hover:stroke-pink-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" />
      </svg>
      <%= link_to "Explore", all_path, class: "nav-link"%>
    </div>
    <%# Stats %>
    <div class="flex items-center space-x-1">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hover:stroke-pink-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <%= link_to "Transactions", transactions_path, class: "nav-link"%>
    </div>
    <%# User Authorization Area %>
    <% if user_signed_in? %>
      <%# Cart %>
      <div class="flex items-center space-x-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hover:stroke-pink-500">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
        </svg>
        <%= link_to "Cart", cart_show_path, class: "nav-link" %>
      </div>
      <%# Sign out %>
      <%# <%= link_to "Sign out", destroy_user_session_path, data:{turbo_method: :delete} ,class:"nav-link" %>
      <%# Account Page %>
      <div class="flex items-center space-x-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hover:stroke-pink-500">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
        </svg>
        <%= link_to "Account", user_profile_path(current_user), class: "nav-link" %>
      </div>
    <% else %>
      <%= link_to "Get Started", sign_path, class: "btn-outline"%>
    <% end %>
  </ul>
</nav>
