<div class="absolute lg:-translate-y-[6rem] xl:-translate-y-[16rem]  -z-10 -mx-10">
  <%= image_tag "gradient 2.png", class: "w-[150rem]" %>
</div>
<h1 class = "text-2xl md:text-5xl text-center mb-5 font-bold">Transactions</h1>
<div id="transactions">
  <table class="table-auto cursor-pointer rounded-3xl outline outline-2 outline-stdPink bg-bgBlack min-w-full w-full">
    <thead>
      <tr class = "hover:bg-neutral-800 text-sm sm:text-lg md:text-2xl">
        <th class="hover:text-stdPink py-5">NFT Name</th>
        <th class="hover:text-stdPink py-5">Bought By</th>
        <th class="hover:text-stdPink py-5">Bought From</th>
        <th class="hover:text-stdPink py-5">Price</th>
        <th class="hover:text-stdPink py-5">Change in Price</th>
        <th class="hover:text-stdPink py-5">Time</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr class = "hover:bg-neutral-800 text-center text-[0.7rem] sm:text-xs md:text-lg">
          <td class="sm:px-3 py-2.5 "><%= transaction.NFT_name %></td>
          <td class="sm:px-3 py-2.5 "><%= transaction.Buyer %></td>
          <td class="sm:px-3 py-2.5 "><%= transaction.Seller %></td>
          <td class="sm:px-3 py-2.5 "><%= transaction.Buy_price %></td>
          <td class="sm:px-3 py-2.5 "><%= transaction.Change_in_price %></td>
          <td class="sm:px-3 py-2.5 "><%= transaction.transaction_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
